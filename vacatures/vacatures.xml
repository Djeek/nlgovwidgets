<script type="text/javascript" charset="utf-8">
	gadgets.util.registerOnLoadHandler(function() {	
		var prefs = new gadgets.Prefs();
		$('#preffield').html(prefs.getString('myname'));

		$('#list').append('<li>item4</li>');
		$('#button').click(function() {
			// Do the ajax stuff here
			var params = {};
			params[gadgets.io.RequestParameters.CONTENT_TYPE] = gadgets.io.ContentType.DOM;

			// var url = 'http://alper.nl/ajax/widgetproject/iGoogle/feed.xml';
			var url = "http://www.werkenbijdeoverheid.nl/rss/?vac_regio=&csro_werkdenkniveau=&csro_vakgebied=&fun_naam=docent";
			
			gadgets.io.makeRequest(url, response, params);

			function response(obj) {
				$('#list').empty();

				var response = obj.data;

				$('#preffield').html('response ' + $("title", response).length);

				$("title", obj.data).each(function(i) {
					$('#list').append('<li>' + $(this).text() + '</li>');	
				});
			}
		});
	});
